{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "types": ["@figma/plugin-typings"],
    "lib": ["es2017"],
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["code.ts", "src/**/*"],
  "exclude": ["node_modules", "dist", "*.js", "*.d.ts"]
}
